<h1>Editing Book</h1>

<%= form_for(@blog) do |f| %>
	<h4 class="edit-head">Title</h4>
	<%= f.text_field :title, class:"book_title" %>
	<h4 class="edit-head">Body</h4>
	<%= f.text_area :body, class:"book_body" %>
	<%= f.submit 'Update Book', class:"book_update" %>
<% end %>
	<%= link_to 'Show', blog_path, class:"show_#{@blog.id}" %>
|
	<%= link_to 'Back', blogs_path, class:"back" %>

