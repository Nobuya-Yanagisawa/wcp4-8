<% if flash[:notice] %>
  <div class="flash">
  	<%= flash[:notice] %>
  </div>
<% end %>

<h1>Books</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th colspan="3"></th>
  </tr>
  <% @blogs.each do |blog| %>
  <tr>
  	<td><%= blog.title %></td>
	<td><%= blog.body %></td>
	<td><%= link_to 'Show', blog_path(blog.id) %></td>
	<td><%= link_to 'Edit', edit_blog_path(blog.id) %></td>
	<td><%= link_to 'Delete', blog_path(blog.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
  </tr>
  <% end %>
</table>



<%= form_for(@blog) do |f| %>

	<h2 class="new-TopHead">New book</h2>
	<h4 class="new-head">Title</h4>
	<%= f.text_field :title, class:"book_title" %>

	<h4 class="new-head">Body</h4>
	<%= f.text_area :body, class:"book_body" %>

	<%= f.submit 'Create Book', class:"create-book" %>

<% end %>

